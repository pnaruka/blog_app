<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>

<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <h1><%= blog.title %></h1>
        <div class="imgContainer">
            <img src="<%= blog.coverImgUrl %>" alt="<%= blog.title %>" width="700px" height="500px">
        </div>
        <div class="blog-body">
            <pre>
                <%= blog.body %>
            </pre>
        </div>
        <div class="creator">
            <img src="<%= blog.createdBy.profileImg %>" alt="<%= blog.createdBy.fullName %>" height="30px" width="30px">
            <h6><%= blog.createdBy.fullName %></h6>
        </div>
        <div class="comment-section mt-4">
            <h3>Comments:</h3>
            <div class="add-comment">
                <form action="/comment/add/<%= blog._id %>" method="post">
                      <div class="mb-3">
                        <input name="content" type="text" class="form-control" id="content" />
                      </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
            <div class="show-comments"></div>
        </div>
    </div>
    <%- include('./partials/scripts.js') %>
</body>

</html>